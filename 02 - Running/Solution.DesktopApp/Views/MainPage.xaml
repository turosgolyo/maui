<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModel="clr-namespace:Solution.DesktopApp.ViewModels"
             xmlns:behaviors="clr-namespace:Solution.DesktopApp.Behaviors"
             xmlns:converters="clr-namespace:Solution.ValidationLibrary.Converters;assembly=Solution.ValidationLibrary"
             x:DataType="viewModel:MainPageViewModel"
             x:Class="Solution.DesktopApp.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:FirstValidationErrorConverter x:Key="FirstValidationErrorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <FlexLayout Direction="Column"
                HorizontalOptions="Center" 
                VerticalOptions="Center"
                Margin="50,0,50,0">
        <Label Text="Running data" 
               HorizontalOptions="Center" />
        <StackLayout>
            <Label Text="Distance" />
            <Entry Text="{Binding Distance.Value}">
            </Entry>
            <Label Text="{Binding Distance.Errors, Converter={StaticResource FirstValidationErrorConverter}}"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Average Speed"/>
            <Entry Text="{Binding AverageSpeed.Value}"></Entry>
            <Label Text="{Binding AverageSpeed.Errors, Converter={StaticResource FirstValidationErrorConverter}}"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Burned Calories"/>
            <Entry Text="{Binding BurnedCalories.Value}"></Entry>
            <Label Text="{Binding BurnedCalories.Errors, Converter={StaticResource FirstValidationErrorConverter}}"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Time"/>
            <Entry Text="{Binding Time.Value}"></Entry>
            <Label Text="{Binding Time.Errors, Converter={StaticResource FirstValidationErrorConverter}}"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Date"/>
            <DatePicker Date="{Binding Date.Value}" MaximumDate="{Binding MaxDateTime}"
                        WidthRequest="{Binding DatePickerWidth}" />
        </StackLayout>
        <Button Text="Submit" Command="{Binding OnSubmitCommand}" />
    </FlexLayout>

</ContentPage>
